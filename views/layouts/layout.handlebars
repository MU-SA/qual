<!doctype html>
<html lang="en">
<head>
    <title>Qualify</title>
    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/cover.css" rel="stylesheet">
    <link rel="icon"
          href="https://wuzzuf.net/static/icons-e49a7611953c474234c6f386e541e7af/apple-touch-icon-120x120.png">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
</head>
<body class="text-center backg-blue m-0">
{{#if logged}}
    <div class="position-absolute hide-follow align-items-baseline position-fixed mr-5 p-3 right-0 row">
        <p class="small c-white">hello!
        <p class="c-blue">_</p>
        <p class=" c-white subtitle-1">{{name}}
    </div>
{{/if}}
{{#if logged}}
    {{#if hr}}
        <nav class="col-md-2 text-left h-100 position-fixed bg-white d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" id="post" href="/post_job">
                            <span data-feather="home " id="post"></span>
                            Post a job
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="submissions" href="/submissions">
                            <span data-feather="file"></span>
                            Submissions
                        </a>
                    </li>

                </ul>
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Saved reports</span>
                    <a class="d-flex align-items-center text-muted" href="#">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span data-feather="file-text"></span>
                            Current month
                        </a>
                    </li>

                </ul>
            </div>
        </nav>
    {{/if}}
{{/if}}
<div class="cover-container backg-blue d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
        <div class="inner ">
            <a href="/home">

                <h5 class="masthead-brand font-weight-bold c-white">IA</h5>
            </a>
            {{#if logged}}
                {{#if hr}}
                    {{#if show_bar}}
                        <a href="/search" class="align-self-center m-0 p-0">
                            <input class=" c-dark"
                                   style="margin: auto;font-size: 12px;max-width:180px;font-family: Rubik,serif;"
                                   type="text"
                                   placeholder="Search"/>
                        </a>
                    {{/if}}
                {{/if}}
            {{/if}}
            <nav class="nav  nav-masthead justify-content-center">
                {{#if logged}}
                    <a class="nav-link" id="home" href="/">Home</a>
                    {{#if hr}}
                        <a class="nav-link" id="jobs" href="/jobs">jobs</a>
                    {{/if}}
                    <a class="nav-link c-dark" id="logout" href="/logout">Log out</a>
                {{else}}
                    <a class="nav-link" id="home" href="/">Home</a>
                    <a class="nav-link" id="login" href="/login">Login</a>
                    <a class="nav-link" id="register" href="/register">Register</a>
                {{/if}}
            </nav>
        </div>
    </header>

    <main role="main" class="backg-blue cover ">
        {{{body}}}
    </main>

</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script>window.jQuery || document.write('<script src="../../public/javascripts/jquery-slim.min.js"><\/script>')</script>
<script src="../../public/javascripts/popper.min.js"></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="../../public/javascripts/bootstrap.min.js"></script>
<script src="../../public/javascripts/requests.js"></script>
<script>
    if ((window.location.href).includes('/register')) {
        document.getElementById('register').classList.add('active');
        console.log(window.location.href)
    }
    else if ((window.location.href).includes('/login')) {
        document.getElementById('login').classList.add('active');
        console.log(window.location.href)
    } else if ((window.location.href).includes('/post_job')) {
        document.getElementById('post').classList.add('c-blue');
        console.log(window.location.href)
    } else if ((window.location.href).includes('/jobs')) {
        document.getElementById('jobs').classList.add('active');
        console.log(window.location.href)
    } else if ((window.location.href).includes('/submissions')) {
        document.getElementById('submissions').classList.add('c-blue');
        console.log(window.location.href)
    }
    else {
        document.getElementById('home').classList.add('active');
        console.log(window.location.href)
    }
</script>

</body>
</html>